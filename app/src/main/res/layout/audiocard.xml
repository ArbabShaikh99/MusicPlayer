<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/black">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardofGetAllAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@android:color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/black">



    <!-- Thumbnail / Song Icon -->
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="58dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/imgSongIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/atifimage"
            android:scaleType="centerCrop"
            android:contentDescription="Song Thumbnail"/>
    </androidx.cardview.widget.CardView>


    <!--    <ImageView-->
<!--        android:id="@+id/imgSongIcon"-->
<!--        android:layout_width="48dp"-->
<!--        android:layout_height="58dp"-->
<!--        android:src="@drawable/atifimage"-->
<!--        android:scaleType="center"-->
<!--        android:contentDescription="Song Thumbnail"-->
<!--        android:layout_marginEnd="12dp" />-->

    <!-- Song Details -->
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Song Title -->
        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Song Title Song Title Song Title Song Title Song Title Song TitleSong Title Song TitleSong Title"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Artist Name -->
            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Author Name Author Name Author Name Author Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:text="|"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Size  Size Size Size"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnMore"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/baseline_more_vert_24"
        android:drawableTint="@android:color/white"
        android:contentDescription="More"
        android:padding="0dp"/>

</LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

